{
    "version": 2,
    "builds": [
        {
            "src": "server/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
       { "src": "/(.*\\.[a-z]+)$", "dest": "/$1" },
  { "src": "/(.*)",         "dest": "/$1" }
    ]
}